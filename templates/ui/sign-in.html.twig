{% extends "base.html.twig" %}

{% block body %}
    <div class="container mt-3">
        <div class="row">

            <div class="col-12">
                <form method="post">
                    {% if vm.errorMessage %}
                        <div class="alert alert-danger">{{ vm.errorMessage }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app.logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <label for="inputEmail" class="sr-only">Email</label>
                    <input type="email" value="{{ vm.lastUsername }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required
                           autofocus>
                    <br>
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <br>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}